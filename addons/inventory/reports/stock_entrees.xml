<?xml version="1.0" encoding="utf-8"?> 
 <odoo>
 
    <template id="report_registres">
      <t t-call="web.html_container">
         <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                           <div> 
                           <h1 style="text-align:center; font-weight: bold;">Product Entry Register</h1><br/>
                            <div class="row p-4 text-center" style="text-align:center" >

                                <div class="col-6">
                                    <p class="text-center" ><span style="font-weight: bold;">Region : </span>
                                       <span > Littoral </span>
                                    <!--  <span t-field="doc.region"/> -->
                                    </p>

                                    <p class="text-center"> <span style="font-weight: bold;"> Health District : </span>
                                        <span> Akwa </span>
                                   <!-- <span t-field="doc.district_sante"></span> -->
                                    </p>
                                </div>

                                <div class="col-6">
                                  <p class="text-center">
                                    <span style="font-weight: bold;">Health Area : </span>
                                    <span > Douala </span>
                                  <!--  <span t-field="doc.aire_sante"/> -->

                                  </p>
                                  
                                  <p class="text-center">
                                    <span style="font-weight: bold;">Name of the Structure : </span>
                                  <!--  <span> Siapharma </span> -->
                                    <span t-field="doc.company_id" />  
                                  </p>


                                </div>
                                
                            </div>

                              <table class="table" style="width: 100%;" >
                                <thead>
                                   <tr>
                                        <th name="th_date" class="text-start">
                                            <span>Date (jj/mm/YY) </span>
                                        </th>
                                        <th name="th_pvr" class="text-start">
                                            <span>N° PVR </span>
                                        </th>
                                        <th name="th_bl" class="text-start">
                                            <span>Invoice/Delivery Note N° </span>
                                        </th>
                                        <th name="th_fournisseur" class="text-start">
                                            <span>Supplier</span>
                                        </th>
                                        <th name="th_nom" class="text-start">
                                            <span>Name (DCI) </span>
                                        </th>
                                        <th name="th_dosage" class="text-start">
                                            <span>Dosage</span>
                                        </th>
                                        <th name="th_forme" class="text-start">
                                            <span>Galenic Form</span>
                                        </th>
                                        <th name="th_conditionement" class="text-start">
                                            <span>Packaging</span>
                                        </th>
                                        <th name="th_qtitéRe" class="text-start">
                                            <span>Quantity Received</span>
                                        </th>
                                        <th name="th_numérodelot" class="text-start">
                                            <span>Lot Numbers</span>
                                        </th>
                                        <th name="th_date" class="text-start">
                                            <span>Expiration Date</span>
                                        </th>
                                         <th name="th_observations" class="text-start">
                                            <span>Comments Name/Signature</span>
                                        </th>
                            
                                    </tr>
                                </thead>

                              <!--  <tbody> -->
                                 <t t-foreach="docs" t-as="doc"> 
                                  <tr>
                                        <td style="width: 10%;" >
                                            <span t-field="doc.stock_dates"/>
                                        </td>
                                        <td>
                                            <span style="border-bottom: 1px solid black; height: 20px; width: 100px;"> </span>
                                        </td>
                                        <td>
                                            <span t-field="doc.stock_names"/>
                                        </td>
                                        <td>
                                            <span t-field="doc.partner_ids"/>
                                        </td>
                                        <td>
                                            <span t-field="doc.dci_id"/>
                                        </td>    
                                        <td>
                                            <span t-field="doc.dci_id.dosage"/>
                                        </td>
                                        <td>
                                            <span t-field="doc.dci_id.forme"/>
                                        </td>
                                        <td>
                                            <span t-field="doc.packaging_names"/>
                                        </td>
                                        
                                        <td>
                                            <span t-field="doc.done"/>
                                          <!--  <span t-field="doc.available_qties"/> -->
                                        </td>
                                        <td>
                                            <span t-field="doc.lot_names"/>
                                        </td>
                                        <td>
                                            <span t-field="doc.expiration_dates"/>
                                        </td>
                    
                                        <td>
                                            <span t-field="doc.name"/>
                                            <div style="border-bottom: 1px solid black; height: 20px; width: 100px;">
                                                <!-- This is an empty placeholder for manual input after printing -->
                                            </div>
                                        </td>

                                    </tr>
                                 </t> 
                               <!-- </tbody> -->

                              </table>

                           </div>
                            
                    </div> 
                </t>   
         </t>
      </t>
   </template>
