<odoo>
    <data>
        <record model="ir.ui.view" id="view_sale_order_form_inherit">
            <field name="name">sale.order.form.inherited</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook" position="before">
                    <group class="custom-fields-wrapper">
                        <field name="alternative_products" widget="many2many_kanban" readonly="1"
                            attrs="{'invisible': ['|', ('alternative_products', '=', False), ('alternative_products', '==', [])]}"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>